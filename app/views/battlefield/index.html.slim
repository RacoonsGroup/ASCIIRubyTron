= subscribe_to "/move"
= subscribe_to "/destroy"
= subscribe_to "/game_over"

- if signed_in?
  = link_to 'Я идиот, убейте меня кто-нибудь11 (покинуть игру)', quit_game_path
- else
  = link_to 'В бой, змеевоен11 (начать игру)', start_game_path

.battlefield
  table.map frame='border' cellspacing="0" cellpadding="0"
    tbody
      -100.times do |y|
        tr
          -100.times do |x|
            td.cell id= "x#{x}y#{y}"
              -@before.each do |snake|
                -if snake.index("#{x},#{y}") != nil
                  span style= "color: #{$SNAKE_COLORS[@before.index(snake)]}"
                    = '¤'
                  - break
